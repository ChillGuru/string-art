{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": ".next",
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "env"
  ],
  "exclude": ["node_modules", ".next"]
}
